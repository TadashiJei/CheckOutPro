<div class="text-center mb-4">
  <img class="logo" src="/images/logo.png" alt="CheckOutPro Logo" onerror="this.src='/images/default-logo.svg'; this.onerror=null;">
  <h1 class="h3 mb-3 fw-normal">Create Account</h1>
  <p>Register a new employee account</p>
</div>

<form action="/auth/register" method="POST">
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%= typeof email != 'undefined' ? email : '' %>" required>
    <label for="email">Email address</label>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
    <label for="password">Password</label>
    <small class="text-muted">Password must be at least 6 characters</small>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
    <label for="confirmPassword">Confirm Password</label>
  </div>

  <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
  
  <div class="mt-3">
    <p>Already have an account? <a href="/auth/login">Login</a></p>
  </div>
  
  <p class="mt-5 mb-3 text-muted">&copy; 2025 CheckOutPro</p>
</form>
